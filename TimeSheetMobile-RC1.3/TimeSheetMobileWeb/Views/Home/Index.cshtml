@using TimeSheetMobileWeb.Models
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>  
    <title>@SiteResources.HomeShortTitle</title>
    <meta name="viewport" content="width=320, height=device-height, initial-scale=1, maximum-scale=1, minimum-scale=1, user-scalable=0"/>
    <meta name="MobileOptimized" content="320"/> 
    <link href="@Url.Content("~/Content/site.jquery.mobile-1.0.css.min.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/jquery.mobile.structure-1.1.0.min.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/Site-1.0.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/home-1.0.css")" rel="stylesheet" type="text/css" />

    

    <script src="@Url.Content("~/Scripts/jquery-1.7.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.mobile-1.1.0.min.js")" type="text/javascript"></script>

    <script type="text/javascript">
        $(document).bind('mobileinit', function () {
            $.mobile.page.prototype.options.keepNative = ":not(.mobilegadget)";
            $.mobile.metaViewportContent = false;
            
        });
        $(document).ready(function(){
            $('.menu-link').click(function () {
                $.mobile.loadingMessage = '@SiteResources.InitialLoadingMessage';
                $.mobile.loadingMessageTheme = 'a';
                $.mobile.loadingMessageTextVisible = true;
                //$.mobile.showPageLoadingMsg();
                window.location = $(this).attr('data-action');
            });
        })
    </script>
</head>
<body >
    <div class="wrapper" data-role='page' data-theme='a'>
    <div>
        <div class='header'>
        <div></div>
        </div>
        <div class='contentmenu'>
            <ul id='menu'>
                <li><a href="#" class='menu-link' data-action='@Url.Action("TimesheetHistory", "Timesheet")'>@(SiteResources.HomeMenuTimesheet+ " >")</a></li>
                <li><a href="#" class='menu-link' data-action='@Url.Action("Index", "Tasks")'>@(SiteResources.HomeMenuTasks + " >")</a></li>
            </ul>
        </div>
        
        <div class='footer' >
        <hr />
        </div>
    </div>
    </div>
</body>
</html>
